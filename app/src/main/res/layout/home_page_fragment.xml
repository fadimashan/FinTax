<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mashan.fintax.ui.mainPage.MainPageFragment">



    <LinearLayout
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/second_line"
        android:gravity="center"
        android:paddingTop="40dp"

        >

        <ImageView
            android:id="@+id/house_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/house_icon"
            android:layout_margin="20dp"
            />

        <ImageView
            android:id="@+id/salary_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/salary_icon"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_line"
        app:layout_constraintBottom_toTopOf="@+id/third_line"
        android:gravity="center"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/car_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/car_icon"
            android:layout_margin="20dp"
            />

        <ImageView
            android:id="@+id/percentage_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/percentage_icon"
            android:layout_margin="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/second_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/summary_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/summary_cercle_icon"
            android:layout_margin="20dp"
            />

        <ImageView
            android:id="@+id/info_btn"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:src="@drawable/information_icon"
            android:layout_margin="20dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>